#include<stdio.h>
int main()
{
	char a[51];
	char b[51];
	int index_a=0;
	int index_b=0;
	scanf("%s", &a);
	scanf("%s", &b);
	
	while (a[index_a])
	{
		index_a++;
	}
	while (b[index_b])
	{
		index_b++;
	}
	int min = index_b;
	for (int i = 0; i <= index_b-index_a; i++)
	{
		int tmp = 0,cnt = 0;
		for (int j = i; j < index_a + i; j++)
		{
			if(a[cnt]!=b[j])
			{
				tmp++;
			}
			cnt++;
		}
		if (min > tmp)
		{
			min = tmp;
		}

	}
	printf("%d\n", min);
	return 0;
}
