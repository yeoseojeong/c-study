//글자 이어붙여 문자열 만들기


#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>


char* solution(const char* string, int index_list[], size_t index_list_len) {
    
    int idx = 0;

    char* answer = (char*)malloc(index_list);


    for (int i = 0; i < index_list_len; i++)
    {
        idx=index_list[i];
        answer[i]=string[idx];
    }
  


    return answer;
}

//문자열의 뒤의 n글자

#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>


char* solution(const char* string, int n)
{
    int len = 0;

    for (int i = 0; string[i] != NULL; i++)
    {
        len++;
    }

    char* answer = (char*)malloc(n + 1);
    answer[n] = '\0';

    for (int i = 0; i <n; i++)
    {
        answer[i] = string[len - n+i];
      
    }

    return answer;
}



//문자열의 앞의 n글자

#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>


char* solution(const char* string, int n) {

    int len = 0;
    while (string[len])
    {
        len++;
    }
    char* answer = (char*)malloc(n+1);

    answer[n]=NULL;
    for (int i = 0; i < n; i++)
    {
        answer[i] = string[i];
    }

   
    return answer;
}
