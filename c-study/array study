//학생 5명의 성적 받기

#include<stdio.h>
int main()
{
	int student[5];


	printf("5명 학생의 점수 입력: \n");

	for (int i = 0; i < 5; i++)
	{
		scanf("%d", &student[i]);
	}

	for(int i=0;i<5;i++)
	{
		printf("%d번째 학생의 점수는 %d 입니다.\n", i+1, student[i]);
	}
	return 0;
}
//배열을 사용해 홀수 짝수 구분해 출력
#include<stdio.h>
int main()
{
	int arr[11];


	for (int i = 0; i < 6; i++)
	{
		scanf("%d", &arr[i]);
	}

	for (int i = 0; i < 6; i++)
	{
		if (arr[i] % 2 == 1)
		{
			printf("%d ", arr[i]);
		}
	}
		printf("\n");
		for (int i = 0; i < 6; i++)
		{
			if (arr[i] % 2 == 0)
			{
				printf("%d ", arr[i]);
			}
		}
		return 0;
	}


//6개 숫자를 받고 거꾸로 출력

```c
#include<stdio.h>
int main()
{
	int arr[11];

	for (int i = 0; i < 6; i++)
	{
		scanf("%d", &arr[i]);
	}

	for (int i = 0; i < 6; i++)
	{
		if (arr[i] % 2 == 1)
		{
			printf("%d ", arr[i]);
		}
	}
		printf("\n");
		for (int i = 0; i < 6; i++)
		{
			if (arr[i] % 2 == 0)
			{
				printf("%d ", arr[i]);
			}
		}
		return 0;
	}
```
