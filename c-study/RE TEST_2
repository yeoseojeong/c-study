//<10진수를 2진수로 바꾸고 2진수의 1의 개수 세기>

//<처음 작성한 코드>

#include <stdio.h>

int countBinaryOne(unsigned int data) {
    // 이 부분을 작성하라 ==========================

    long long result[100];
    int index=0;
    int cnt = 0;

   
    for (int i = 0; i < data; i++)
    {
        result[index] = data % 2;
        data = data / 2;
        index++;
    }


    for (int i = 0; result[i] != NULL; i++)
    {
        if (result[i] == 1)
        {
            cnt++;
        }
    }
    return cnt;




    // =============================================
}


int main() {

    unsigned int data;
    scanf("%d", &data);

    printf("%d", countBinaryOne(data));

    return 0;
}

//<수정 후 코드>

#include <stdio.h>

int countBinaryOne(unsigned int data) {
    // 이 부분을 작성하라 ==========================

    int result[25] = {0};
    int index=0;
    int cnt = 0;

   
    for (int i = 0; i < 25; i++)
    {
        result[i] = data % 2;
        data = data / 2;
     
    }


    for (int i = 0; i<25; i++)
    {
        if (result[i] == 1)
        {
            cnt++;
        }
    }
    return cnt;




    // =============================================
}


int main() {

    unsigned int data;
    scanf("%d", &data);

    printf("%d", countBinaryOne(data));

    return 0;
}
