//3

#define CRT_SECURE_NO_WARINGS
#include<stdio.h>

int printBinary(unsigned int x)
{
	int result[50] = { 0, };

	
	for (int i = 0; i < 8; i++)
	{
		result[i] = x % 2;
		x = x / 2;
	}

	for (int i = 0; i < 8; i++)
	{
		printf("%d", result[i]);
	}
	
}

int main()
{
	unsigned int x;
	scanf("%d", &x);

	printBinary(x);

	return 0;
}


//4
#define CRT_SECURE_NO_WARINGS
#include<stdio.h>

int countBinaryOne(unsigned int data)
{
	unsigned int result[101];
	int len = 0;
	int cnt=0;

	while (1)
	{
		result[len] = data % 2;
		data = data / 2;
		
		len++;
		if (data == 0)
		{
			break;
		}
	}
	for (int i = 0; i < len; i++)
	{
		if (result[i] == 1)
		{
			cnt++;
		}
	}
	return cnt;

}

int main()
{
	unsigned int data;
	scanf("%d", &data);

	printf("%d", countBinaryOne(data));

	return 0;
}
